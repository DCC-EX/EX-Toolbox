<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/buttonStopDisabledStroke_outline" />
            <solid android:color="@color/buttonStopDisabledFill_outline" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/buttonStopSelectedStroke_outline" />
            <solid android:color="@color/buttonStopSelectedFill_outline"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/buttonStopStroke_outline" />
            <solid android:color="@color/buttonStopFill_outline" />
        </shape>
    </item>
</selector>
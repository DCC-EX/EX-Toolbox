<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_ultra" />
            <stroke android:width="@dimen/buttonSelectedStroke_ultra" android:color="@color/buttonCommonSelectedStroke_ultra" />
            <!-- <solid android:color="@color/buttonSelectedFill_ultra"/> -->
            <gradient
                android:angle="135"
                android:centerX="20%"
                android:startColor="@color/buttonCommonFillGradiantLight_ultra"
                android:centerColor="@color/buttonCommonFillGradiantCenter_ultra"
                android:endColor="@color/buttonCommonFillGradiantDark_ultra"
                android:type="linear"
                />
        </shape>
    </item>

    <!-- inside border  -->
    <item
        android:top="@dimen/buttonActivatedInsideStrokePadding_ultra" android:left="@dimen/buttonActivatedInsideStrokePadding_ultra" android:right="@dimen/buttonActivatedInsideStrokePadding_ultra" android:bottom="@dimen/buttonActivatedInsideStrokePadding_ultra">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_ultra" />
            <stroke android:width="@dimen/buttonSelectedInsideStroke_ultra" android:color="@color/buttonActivatedHoveredInsideStroke_ultra" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>
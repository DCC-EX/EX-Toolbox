<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/throttle_screen"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:orientation="vertical"
   android:keepScreenOn="true"
>
   <LinearLayout
      android:id="@+id/throttle_T"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
   >
      <LinearLayout
         android:id="@+id/loco_buttons_group_T"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="1.0"
      >
         <RelativeLayout
            android:id="@+id/loco_cell_T"
            android:layout_weight=".73"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
         >
            <Button
               android:id="@+id/button_select_loco_T"
               android:text="@string/none"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:layout_alignParentRight="true"
               android:padding="0dp" />
            <TextView
               android:id="@+id/loco_label_T"
               android:text="@string/loco"
               android:paddingTop="2dp"
               android:paddingLeft="6dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#666666" />
         </RelativeLayout>
         <RelativeLayout
            android:id="@+id/speed_cell_T"
            android:layout_weight=".27"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
         >
            <TextView
               android:id="@+id/speed_label_T"
               android:text="@string/speed"
               android:paddingTop="2dp"
               android:paddingLeft="2dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:enabled="false" />
            <TextView
               android:id="@+id/speed_value_label_T"
               android:text="0"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="36dp"
               android:layout_alignParentRight="true"
               android:enabled="false" />
            <TextView
               android:id="@+id/volume_indicator_T"
               android:text="@string/volume_indicator"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignBottom="@id/speed_value_label_T"
               android:enabled="false" />
         </RelativeLayout>
      </LinearLayout>
      <TableLayout
         android:id="@+id/dir_buttons_table_T"
         android:layout_width="fill_parent"
         android:stretchColumns="0,1,2"
         android:layout_height="wrap_content"
      >
         <TableRow>
            <Button
               android:id="@+id/button_fwd_T"
               android:text="@string/forward"
               style="@style/large_button_style"
               android:enabled="false" />
            <Button
               android:id="@+id/button_stop_T"
               android:text="@string/stop"
               style="@style/large_button_style"
               android:enabled="false" />
            <Button
               android:id="@+id/button_rev_T"
               android:text="@string/reverse"
               style="@style/large_button_style"
               android:enabled="false" />
         </TableRow>
      </TableLayout>
      <SeekBar
         android:id="@+id/speed_T"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_below="@id/loco_label_T"
         android:layout_alignLeft="@id/loco_label_T"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:enabled="false" />
      <ScrollView
         android:id="@+id/function_buttons_scroller_T"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
      >
         <TableLayout
            android:id="@+id/function_buttons_table_T"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3"
            android:paddingRight="20dp"
         >
            <TableRow>
               <Button
                  android:text="Light"
                  style="@style/button_style" />
               <Button
                  android:text="Bell"
                  style="@style/button_style" />
               <Button
                  android:text="Horn"
                  style="@style/button_style" />
               <Button
                  android:text="3"
                  style="@style/button_style" />
            </TableRow>
            <TableRow>

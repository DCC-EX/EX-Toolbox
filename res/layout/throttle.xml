            <Button
               android:text="31"
               style="@style/button_style" />
         </TableRow>
      </TableLayout>
   </ScrollView>

   <TableLayout
      android:id="@+id/dir_buttons_table"
      android:layout_width="fill_parent"
      android:stretchColumns="0,1,2"
      android:layout_height="wrap_content">
      <TableRow>
         <Button
            android:id="@+id/button_fwd_T"
            android:text="@string/forward"
            style="@style/large_button_style" />
         <Button
            android:id="@+id/button_stop_T"
            android:text="@string/stop"
            style="@style/large_button_style" />
         <Button
            android:id="@+id/button_rev_T"
            android:text="@string/reverse"
            style="@style/large_button_style" />
      </TableRow>
   </TableLayout>

   <RelativeLayout
      android:id="@+id/speed_group_T"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      <Button
         android:id="@+id/button_select_loco_T"
         android:text="@string/none"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceLarge" />
      <TextView
         android:id="@+id/speed_label_T"
         android:text="@string/speed"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:layout_toRightOf="@id/button_select_loco_T"
         android:layout_alignBottom="@id/button_select_loco_T"
         android:gravity="right" />
      <TextView
         android:id="@+id/speed_value_label_T"
         android:text="0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/speed_label_T"
         android:layout_alignBottom="@id/speed_label_T"
         android:paddingLeft="8dp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:gravity="right" />
      <SeekBar
         android:id="@+id/speed_T"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_below="@id/button_select_loco_T"
         android:layout_alignLeft="@id/button_select_loco_T"
         android:paddingLeft="12dp"
         android:paddingRight="12dp" />
   </RelativeLayout>


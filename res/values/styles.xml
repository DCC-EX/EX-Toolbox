<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="large_button_style">
      <item name="android:textSize">24sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:ellipsize">none</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">60dp</item>
      <item name="android:padding">2dp</item>
      <item name="android:background">@drawable/sticky_button_states</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
      <item name="android:textColor">#FF000000</item>
      <item name="android:shadowColor">#FFFFFFFF</item>
      <item name="android:shadowDx">1</item>
      <item name="android:shadowDy">1</item>
      <item name="android:shadowRadius">0.4</item>
    </style>
    <style name="button_style">
      <item name="android:textSize">18sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:ellipsize">none</item>
      <item name="android:layout_width">60dp</item>
      <item name="android:layout_height">48dp</item>
      <item name="android:padding">2dp</item>
      <item name="android:background">@drawable/sticky_button_states</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="select_button_style">
      <item name="android:padding">0dp</item>
      <item name="android:background">@drawable/nonsticky_button_states</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="edit_label_style">
      <item name="android:textSize">18sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:ellipsize">none</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">48dp</item>
      <item name="android:maxLength">7</item>
    </style>
    <style name="edit_func_style">
      <item name="android:textSize">18sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:maxLength">2</item>
      <item name="android:inputType">number</item>
    </style>
</resources>

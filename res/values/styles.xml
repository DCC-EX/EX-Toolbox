<resources>
    <style name="large_button_style" parent="@android:style/Widget.Button">
      <item name="android:textColor">@color/btn_text_states</item>
      <item name="android:textSize">24sp</item>
      <item name="android:layout_height">60dp</item>
      <item name="android:padding">2dp</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:background">@drawable/sticky_button_states</item>
      <item name="android:shadowColor">#88ffffff</item>
      <item name="android:shadowDx">2</item>
      <item name="android:shadowDy">2</item>
      <item name="android:shadowRadius">1</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="stop_button_style" parent="@android:style/Widget.Button">
      <item name="android:textColor">@color/btn_text_states</item>
      <item name="android:textSize">24sp</item>
      <item name="android:layout_height">60dp</item>
      <item name="android:padding">2dp</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:background">@drawable/stop_button_states</item>
      <item name="android:shadowColor">#88ffffff</item>
      <item name="android:shadowDx">2</item>
      <item name="android:shadowDy">2</item>
      <item name="android:shadowRadius">1</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="normal_button_style" parent="@android:style/Widget.Button">
      <item name="android:textColor">@color/btn_text_states</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/sticky_button_states</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:shadowColor">#88ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:ellipsize">end</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="fn_button_style" parent="@android:style/Widget.Button">
      <item name="android:textColor">@color/btn_text_states</item>
      <item name="android:textSize">18sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:ellipsize">none</item>
      <item name="android:layout_width">60dp</item>
      <item name="android:layout_height">48dp</item>
      <item name="android:padding">2dp</item>
      <item name="android:background">@drawable/sticky_button_states</item>
      <item name="android:gravity">center_vertical|center_horizontal</item>
      <item name="android:shadowColor">#88ffffff</item>
      <item name="android:shadowDx">1</item>
      <item name="android:shadowDy">1</item>
      <item name="android:shadowRadius">1</item>
    </style>
    <style name="edit_label_style">
      <item name="android:textSize">18sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:ellipsize">none</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">48dp</item>
      <item name="android:maxLength">7</item>
      <item name="android:shadowColor">#FFFFFFFF</item>
      <item name="android:shadowDx">1</item>
      <item name="android:shadowDy">1</item>
      <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="edit_func_style">
      <item name="android:textSize">18sp</item>
      <item name="android:singleLine">true</item>
      <item name="android:maxLength">2</item>
      <item name="android:inputType">number</item>
      <item name="android:shadowColor">#FFFFFFFF</item>
      <item name="android:shadowDx">1</item>
      <item name="android:shadowDy">1</item>
      <item name="android:shadowRadius">0.2</item>
    </style>

<style name="app_title" parent="@android:style/TextAppearance.WindowTitle">
  <item name="android:shadowColor">#FF000000</item>
  <item name="android:shadowDx">2</item>
  <item name="android:shadowDy">2</item>
  <item name="android:shadowRadius">1</item>
</style>

    <style name="app_theme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:windowTitleStyle">@style/app_title</item>
        <item name="android:listViewStyle">@style/EDListView</item>
        <item name="android:expandableListViewStyle">@style/EDListView</item>
    </style>

 <style name="EDListView" parent="@android:style/Widget.ListView">
  <item name="android:divider">#8c8a8c</item>
  <item name="android:dividerHeight">1dp</item>
  <item name="android:cacheColorHint">@android:color/transparent</item>
 </style>

<style name="small_heading_style" parent="@android:style/Widget.TextView">
  <item name="android:textColor">#FFFFFF</item>
  <item name="android:background">#8c8a8c</item>
  <item name="android:layout_width">fill_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:shadowColor">#FF000000</item>
  <item name="android:shadowDx">2</item>
  <item name="android:shadowDy">2</item>
  <item name="android:shadowRadius">1</item>
</style>

<style name="floating_text_style" parent="@android:style/Widget.TextView">
  <item name="android:shadowColor">#FF000000</item>
  <item name="android:shadowDx">2</item>
  <item name="android:shadowDy">2</item>
  <item name="android:shadowRadius">1</item>
</style>

<style name="list_item_style" parent="@android:style/Widget.TextView">
  <item name="android:textColor">#FFFFFF</item>
  <item name="android:shadowColor">#FF000000</item>
  <item name="android:shadowDx">2</item>
  <item name="android:shadowDy">2</item>
  <item name="android:shadowRadius">1</item>
</style>

<style name="list_id_style" parent="@android:style/Widget.TextView">
  <item name="android:textSize">12sp</item>
  <item name="android:textStyle">italic</item>
  <item name="android:textColor">#FFFFFF</item>
</style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75" >

        <TextView
            android:id="@+id/rt_user_name"
            style="?attr/list_item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="15dp"
            android:text="testing string string string string"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/rt_system_name_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is hidden"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rt_system_name"
            style="?attr/list_id_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing string" />
    </RelativeLayout>

    <Button
        android:id="@+id/rt_current_state_desc"
        style="?attr/ed_list_button_style"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.25"
        android:text="testing" />
</LinearLayout>
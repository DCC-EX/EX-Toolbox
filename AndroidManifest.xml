<?xml version="1.0" encoding="utf-8"?>
<manifest
   xmlns:android="http://schemas.android.com/apk/res/android"
   package="jmri.enginedriver"
   android:versionName="0.7"
   android:versionCode="7"
>
   <uses-permission
      android:name="android.permission.INTERNET" />
   <uses-permission
      android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   <uses-permission
      android:name="android.permission.ACCESS_WIFI_STATE" />
   <uses-permission
      android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
   <application
      android:label="@string/app_name"
      android:icon="@drawable/icon"
      android:name=".threaded_application"
      android:description="@string/app_description"
      android:debuggable="true"
   >
      <activity
         android:name=".connection_activity"
         android:label="Engine Driver - Connect"
         android:screenOrientation="portrait"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN" />
            <category
               android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>
      <activity
         android:name=".select_loco"
         android:label="@string/app_name_select_loco"
         android:screenOrientation="portrait"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN" />
         </intent-filter>
      </activity>
      <activity
         android:name=".engine_driver"
         android:label="@string/app_name_throttle"
         android:screenOrientation="portrait"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN" />
         </intent-filter>
      </activity>
      <activity
         android:label="@string/app_name_functions"
         android:screenOrientation="portrait"
         android:name=".function_settings"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN"
            ></action>
         </intent-filter>
      </activity>
      <activity
         android:label="@string/app_name_turnouts"
         android:screenOrientation="portrait"
         android:name=".turnouts"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN"
            ></action>
         </intent-filter>
      </activity>
      <activity
         android:label="@string/app_name_routes"
         android:screenOrientation="portrait"
         android:name=".routes"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN"
            ></action>
         </intent-filter>
      </activity>
      <activity
         android:label="@string/app_name_preferences"
         android:screenOrientation="portrait"
         android:name=".preferences"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN"
            ></action>
            <category
               android:name="android.intent.category.PREFERENCES" />
         </intent-filter>
      </activity>
      <activity
         android:label="@string/app_name_about"
         android:name=".about_page"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN"
            ></action>
         </intent-filter>
      </activity>
      <activity
         android:label="@string/app_name_power_control"
         android:name=".power_control"
      >
         <intent-filter>
            <action
               android:name="android.intent.action.MAIN"
            ></action>
         </intent-filter>
      </activity>
   </application>


   <uses-sdk
      android:minSdkVersion="3"
   ></uses-sdk>
</manifest> 

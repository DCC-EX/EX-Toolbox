<?xml version="1.0" encoding="utf-8"?>
<manifest
   xmlns:android="http://schemas.android.com/apk/res/android"
   package="jmri.enginedriver"
   android:versionName="2.1" android:versionCode="21">
   <uses-permission
      android:name="android.permission.INTERNET" />
   <uses-permission
      android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   <uses-permission
      android:name="android.permission.ACCESS_WIFI_STATE" />
   <uses-permission
      android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
   <supports-screens android:resizeable="true" android:largeScreens="true" android:smallScreens="true" android:normalScreens="true"/>
   <application
      android:label="@string/app_name"
      android:icon="@drawable/icon"
      android:name=".threaded_application"
      android:description="@string/app_description" android:theme="@style/app_theme" android:debuggable="false">
      <activity
         android:name=".connection_activity"
         android:label="@string/app_name_connect">
         <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>        
      </activity>
      <activity
         android:label="@string/app_name_select_loco"
         android:name=".select_loco"
      >
      </activity>
      <activity
         android:label="@string/app_name_throttle"
         android:name=".throttle" android:screenOrientation="portrait">
         android:name=".throttle"
      </activity>
      <activity
         android:label="@string/app_name_functions"
         android:name=".function_settings"
      >
      </activity>
      <activity
         android:label="@string/app_name_turnouts"
         android:name=".turnouts">
      </activity>
      <activity
         android:label="@string/app_name_routes"
         android:name=".routes">
      </activity>
      <activity
         android:label="@string/app_name_preferences"
         android:name=".preferences"
      >
      </activity>
      <activity
         android:label="@string/app_name_about"
         android:name=".about_page"
      >
      </activity>
      <activity
         android:label="@string/app_name_web"
         android:name=".web_activity"
      >
      </activity>
      <activity
         android:label="@string/app_name_power_control"
         android:name=".power_control"
      >
      </activity>
   </application>

	<uses-sdk android:minSdkVersion="4"></uses-sdk>

</manifest> 
                android:textSize="18sp" />
 <!--           </LinearLayout> -->


            <RadioGroup
                android:id="@+id/intro_throttle_type_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/intro_theme_default_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableLeft="@drawable/intro_theme_default"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_background"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:id="@+id/intro_throttle_name_title0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intro_throttle_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prefThrottleNameTitle"
            android:textColor="@color/solidWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150dp">

        <TextView
            android:id="@+id/intro_throttle_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="@string/prefThrottleNameTitle"
            android:textColor="@color/solidWhite"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/intro_throttle_name_value"
            style="?attr/edit_label_style"
            android:layout_width="600sp"
            android:layout_height="wrap_content"
            android:background="@color/solidBlack"
            android:maxLength="255"
            android:shadowColor="#FFFFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.2"
            android:singleLine="true"
            android:text="@string/prefThrottleNameDefaultValue" />

        <TextView
            android:id="@+id/intro_throttle_name_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:text="@string/prefThrottleNameSummary"
            android:textColor="@color/solidWhite"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>